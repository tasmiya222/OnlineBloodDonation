@model OnlineBloodBank.Models.BloodGroup

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container-fluid">
    <div class="row">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="col-lg-6">
            <div class="card">
                @using (Html.BeginForm())
                {
                    @Html.HiddenFor(model => model.BloodGroupId)
                    @Html.AntiForgeryToken()

                    <div class="card-header"> Update Blood Group</div>
                    <div class="card-body">
                        <div class="card-title">

                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.BloodGroupName, htmlAttributes: new { @class = "control-label mb-1" })

                            @Html.EditorFor(model => model.BloodGroupName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.BloodGroupName, "", new { @class = "text-danger" })

                        </div>
                        <hr>
                        <input type="submit" value="Update" class="btn btn-lg btn-info btn-block" />
                    </div>
                }

            </div>
        </div>
    </div>
</div>